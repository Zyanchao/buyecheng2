<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/x20"
    android:background="#2F2B2F"
    android:gravity="center_vertical"
    android:orientation="horizontal" >


       <ImageView
        android:id="@+id/iv_counter_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1.0"
        android:contentDescription="@null"
        android:background="@drawable/gmsjk_jian" />

    <TextView
        android:id="@+id/tv_counter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textSize="14.0sp"
        android:background="@drawable/gmsjk_shichangkuang"
        android:text="1" />

    <ImageView
        android:id="@+id/iv_counter_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1.0"
        android:contentDescription="@null"
        android:background="@drawable/gmsjk_jia" />
        
        
    </LinearLayout>
