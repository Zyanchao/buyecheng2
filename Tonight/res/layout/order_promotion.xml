<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2B2F"
    android:orientation="vertical" >

    
      <include
            android:id="@+id/nearby_header"
            layout="@layout/common_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/nearby_header"
            android:background="#2F2B2F"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x20"
                    android:text="订单编号:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />

                <TextView
                    android:id="@+id/tv_order_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x20"
                    android:text="X-10001"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/x35" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:id="@+id/ll_course_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="商品总价:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />

                <TextView
                    android:id="@+id/tv_order_pricecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:text="400"
                    android:textColor="#FA6638"
                    android:textSize="@dimen/x40" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:id="@+id/rl_youhuiquan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="礼 包"
                    android:textSize="@dimen/x35"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_order_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/bt_buy"
                    android:paddingRight="@dimen/x20"
                    android:textColor="@color/text_font_purple" />

                <Button
                    android:id="@+id/bt_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/buy_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="数量:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />

                <include layout="@layout/select_count" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="折扣价:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />

                <TextView
                    android:id="@+id/tv_order_pricezhekou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:text="400"
                    android:textColor="#FA6638"
                    android:textSize="@dimen/x40" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="电 话:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />

                <TextView
                    android:id="@+id/tv_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:text="15225200231"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x35" />
            </RelativeLayout>


            

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0" />
            
            
            <Button
                android:id="@+id/bt_submit"
                android:layout_width="@dimen/x605"
                android:layout_height="@dimen/x105"
                android:layout_marginTop="@dimen/x90"
                android:layout_gravity="center"
                android:background="@drawable/bt_tijiao_order"
                android:text="提交订单"
                android:textColor="#ffffff"
                android:textSize="@dimen/x40" />
        </LinearLayout>
   
</RelativeLayout>